pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: zap
    image: zaproxy/zap-stable
    command:
    - cat
    tty: true
    volumeMounts:
    - name: workspace-volume
      mountPath: /zap/wrk
  volumes:
  - name: workspace-volume
    emptyDir: {}
"""
        }
    }
    environment {
        TARGET_URL = 'http://example.com' // URL objetivo
        REPORT_NAME = 'zap_report.html'   // Nombre del reporte
    }
    stages {
        stage('Run OWASP ZAP') {
            steps {
                container('zap') {
                    script {
                        // Ejecutar OWASP ZAP
                        sh """
                        echo "Ejecutando OWASP ZAP en Kubernetes..."
                        zap.sh -cmd -quickurl ${TARGET_URL} -quickout /zap/wrk/${REPORT_NAME}
                        """
                        
                        // Copiar reporte al workspace de Jenkins
                        sh "cp /zap/wrk/${REPORT_NAME} ${WORKSPACE}/"
                    }
                }
            }
        }
    }
    post {
        always {
            echo "Generando reporte..."
            // Archivar el reporte desde el workspace
            archiveArtifacts artifacts: "${REPORT_NAME}", allowEmptyArchive: true
        }
    }
}
