pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: zap
    image: zaproxy/zap-stable
    command:
    - cat
    tty: true
    resources:
      requests:
        memory: "512Mi"
        cpu: "500m"
      limits:
        memory: "1Gi"
        cpu: "1"
"""
        }
    }
    environment {
        TARGET_URL = 'http://example.com' // URL objetivo
        REPORT_DIR = 'zap-reports'        // Carpeta para guardar reportes
        REPORT_NAME = 'zap_report.html'  // Nombre del reporte
        ZIP_NAME = 'zap_reports.zip'     // Nombre del archivo ZIP
    }
    stages {
        stage('Run OWASP ZAP') {
            steps {
                container('zap') {
                    script {
                        // Crear carpeta para los reportes en el workspace
                        sh "mkdir -p ${WORKSPACE}/${REPORT_DIR}"
                        
                        // Ejecutar OWASP ZAP y guardar el reporte en la carpeta configurada
                        sh """
                        echo "Ejecutando OWASP ZAP en Kubernetes..."
                        zap.sh -cmd -quickurl ${TARGET_URL} -quickout ${WORKSPACE}/${REPORT_DIR}/${REPORT_NAME}
                        """
                    }
                }
            }
        }
    }
    post {
        always {
            script {
                echo "Comprimiendo los reportes..."
                
                // Comprimir la carpeta de reportes en un archivo ZIP
                sh "cd ${WORKSPACE} && zip -r ${ZIP_NAME} ${REPORT_DIR}"
                
                // Guardar el archivo ZIP como artefacto
                archiveArtifacts artifacts: "${ZIP_NAME}", allowEmptyArchive: true
            }
        }
    }
}
