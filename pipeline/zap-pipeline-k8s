pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: zap
    image: zaproxy/zap-stable
    command:
    - cat
    tty: true
    resources:
      requests:
        memory: "512Mi"
        cpu: "500m"
      limits:
        memory: "1Gi"
        cpu: "1"
"""
        }
    }
    environment {
        TARGET_URL = 'http://example.com'
        REPORT_DIR = 'zap-reports'
        REPORT_NAME = 'zap_report.html'
        ZIP_NAME = 'zap_reports.zip'
    }
    stages {
        stage('Run OWASP ZAP') {
            steps {
                container('zap') {
                    script {
                        sh "mkdir -p ${WORKSPACE}/${REPORT_DIR}"
                        sh """
                        echo "Ejecutando OWASP ZAP en Kubernetes..."
                        zap.sh -cmd -quickurl ${TARGET_URL} -quickout ${WORKSPACE}/${REPORT_DIR}/${REPORT_NAME}
                        """
                    }
                }
            }
        }
    }
    post {
        always {
            script {
                echo "Comprimiendo los reportes..."
                sh """
                apt-get update && apt-get install -y zip
                cd ${WORKSPACE} && zip -r ${ZIP_NAME} ${REPORT_DIR}
                """
                archiveArtifacts artifacts: "${ZIP_NAME}", allowEmptyArchive: true
            }
        }
    }
}
