pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: zap
    image: zaproxy/zap-stable
    command:
    - cat
    tty: true
    volumeMounts:
    - name: workspace-volume
      mountPath: /zap/wrk
  volumes:
  - name: workspace-volume
    emptyDir: {}
"""
        }
    }
    parameters {
        string(name: 'TARGET_URL', defaultValue: 'http://example.com', description: 'URL objetivo para el an√°lisis')
    }
    environment {
        REPORT_DIR = '/zap/wrk' // Directorio para guardar reportes
        HTML_REPORT = 'zap_report.html' // Reporte HTML
        JSON_REPORT = 'zap_report.json' // Reporte JSON
        XML_REPORT = 'zap_report.xml'   // Reporte XML
    }
    stages {
        stage('Run OWASP ZAP') {
            steps {
                container('zap') {
                    script {
                        // Crear el directorio para reportes
                        sh "mkdir -p ${env.REPORT_DIR}"

                        // Ejecutar OWASP ZAP y generar reportes en diferentes formatos
                        sh """
                        echo "Ejecutando OWASP ZAP en Kubernetes..."
                        zap.sh -cmd -quickurl ${params.TARGET_URL} -quickout ${env.REPORT_DIR}/${env.HTML_REPORT}
                        zap.sh -cmd -quickurl ${params.TARGET_URL} -quickout ${env.REPORT_DIR}/${env.JSON_REPORT}
                        zap.sh -cmd -quickurl ${params.TARGET_URL} -quickout ${env.REPORT_DIR}/${env.XML_REPORT}
                        """

                        // Copiar reportes al workspace de Jenkins
                        sh "cp ${env.REPORT_DIR}/* ${WORKSPACE}/"
                    }
                }
            }
        }
    }
    post {
        always {
            echo "Generando reportes..."
            // Archivar los reportes generados
            archiveArtifacts artifacts: "${HTML_REPORT}, ${JSON_REPORT}, ${XML_REPORT}", allowEmptyArchive: true
        }
    }
}
